<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Configuration to support system testing the rewards application. -->
  <bean name="taskListService" class="se.vgregion.portal.tasklist.services.TaskListServiceImpl">
    <property name="simpleJdbcTemplate" ref="jdbcTemplate" />
    <property name="dataFieldMaxValueIncrementer" ref="dataFieldMaxValueIncrementer" />
  </bean>

  <bean id="dataFieldMaxValueIncrementer" class="org.springframework.jdbc.support.incrementer.HsqlSequenceMaxValueIncrementer">
    <property name="dataSource" ref="dataSource" />
    <property name="incrementerName" value="task_sequence" />
  </bean>

  <bean id="jdbcTemplate" class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
    <constructor-arg name="dataSource" ref="dataSource" />
  </bean>

  <!-- Creates an in-memory "rewards" database populated with test data for fast testing -->
  <bean id="dataSource" class="dbsetup.DataSourceFactory">
    <property name="testDatabaseName" value="tasklist-portal" />
    <property name="schemaLocation" value="classpath:dbsetup/schema.sql" />
    <property name="testDataLocation" value="classpath:dbsetup/test-data.sql" />
  </bean>

</beans>
